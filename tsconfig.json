{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node", // Gunakan 'Node' agar bisa resolusi module tanpa ekstensi
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": "./src",
    "noEmit": true,
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "baseUrl": ".", // Menetapkan root proyek sebagai base URL
    "paths": {
      "@/*": ["src/*"] // Alias @db untuk merujuk ke folder db yang ada di root proyek
    }
  },
  "include": ["src"]
}
